{
  "compilerOptions": {
    "strictNullChecks": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "allowJs": false,
    "jsx": "preserve",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "declaration": true,
    "declarationDir": "./",
    "target": "es2015",
    "lib": [
      "dom",
      "es2016",
      "es2017",
      "es2017.object"
    ]
  },
  "include": [
    "./src/**/*",
    "./typings/**/*"
  ],
  "exclude": [
    "node_modules",
    "lib",
    "es"
  ]
}
